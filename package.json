{
  "name": "basic-parcel",
  "version": "1.0.0",
  "description": "",
  "main": "index.js",
  "scripts": {
    "start": "yarn build1 && parcel index.html --open -p 3000",
    "build": "yarn build1 && parcel build index.html",
    "build1": "rimraf dist && NODE_ENV=production:legacy parcel build index-legacy.html --out-dir dist --no-cache --no-minify",
    "test": "jest --env=node --colors --coverage spec --watch",
    "test-travis": "jest --env=node --colors --coverage spec"
  },
  "keywords": [
    "parcel",
    "hyperhtml"
  ],
  "author": "John Hardy",
  "license": "MIT",
  "dependencies": {
    "@webcomponents/webcomponentsjs": "^2.0.4",
    "babel-polyfill": "^6.26",
    "hyperhtml": "^2.13.0",
    "hyperhtml-element": "^2.1.1",
    "todomvc-app-css": "^2.0.0",
    "todomvc-common": "^1.0.5"
  },
  "devDependencies": {
    "babel-core": "^6.26.3",
    "babel-plugin-syntax-dynamic-import": "^6.18.0",
    "babel-plugin-transform-class-properties": "^6.24.1",
    "babel-plugin-transform-custom-element-classes": "^0.1.0",
    "babel-plugin-transform-es2015-classes": "^6.24.1",
    "babel-preset-env": "^1.7.0",
    "babel-preset-react": "^6.24.1",
    "babel-preset-stage-2": "^6.24.1",
    "basichtml": "^0.16.1",
    "cross-env": "^5.2.0",
    "jest": "^23.4.2",
    "parcel-bundler": "^1.9.7",
    "rimraf": "^2.6.2"
  },
  "jest": {
    "transformIgnorePatterns": [
      "./node_modules/todomvc-common/base.css",
      "./node_modules/todomvc-app-css/index.css"
    ]
  }
}
